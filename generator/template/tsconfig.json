{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [ "es2015", "dom", "dom.iterable", "es2015.promise", "scripthost"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
